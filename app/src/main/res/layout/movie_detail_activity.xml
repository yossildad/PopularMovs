<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="match_parent">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.eldad.yossi.popularmovs.MovieDetailsActivity"
    tools:ignore="MergeRootFrame">
        <FrameLayout
        android:id="@+id/movies_detail_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>
        <FrameLayout
        android:id="@+id/trailers_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/movies_detail_container"
        android:layout_alignParentLeft="true"/>
        <FrameLayout
        android:id="@+id/reviews_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trailers_container"
        android:layout_alignParentLeft="true"/>
</RelativeLayout>
</ScrollView>